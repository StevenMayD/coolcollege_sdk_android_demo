<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:onClick="click_recordAudio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="录音"
            />

        <Button
            android:onClick="click_recordVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="录制视频"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:onClick="click_chooseImage"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="选择图片(相册/相机)"
                />

            <Button
                android:onClick="click_chooseVideo"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="选择视频(相册/相机)"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:onClick="click_uploadFile"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="通用文件上传"
                />

            <Button
                android:onClick="click_OSSUploadFile"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Oss文件上传"
                />
        </LinearLayout>

        <Button
            android:onClick="click_shareUniversal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="分享"
            />

        <Button
            android:onClick="click_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="扫码"
            />

        <Button
            android:onClick="click_getLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="定位"
            />

        <Button
            android:onClick="click_vibration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="震动" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:onClick="click_sendMessage"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="复制信息并跳转微信" />

            <Button
                android:onClick="click_copyMessage"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="复制信息只粘贴板" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:onClick="click_saveImage"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="保存图片到相册" />

            <Button
                android:onClick="click_getSystemInfo"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="获取手机系统信息" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_view_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="记录"
            />
    </LinearLayout>

</LinearLayout>